        </thead>
        <tbody id="rowTbody">
          {{#each items}}
            <tr>
              <td>{{{pos}}}</td>
              <td><img src={{escudo}} alt="" width="24" height="24" /></td>
              <td>{{equipo}}</td>
              <td>{{pj}}</td>
              <td>{{g}}</td>
              <td>{{e}}</td>
              <td>{{p}}</td>
              <td class="hidden">{{gf}}</td>
              <td class="hidden">{{gc}}</td>
              <td class="hidden">{{dg}}</td>
